#!/bin/bash
export_ () { export $1="$2"; }
dt4     () { echo $(date "+%Y%m%dT%H%M%S"); }
date4dt () { echo $1 | cut -c 1-8; }
ncat    () { echo ${bold}${1}${normal}; cat ${1}; }
dump    () { for name in $(/bin/ls $ROOT/*.zjot); do ncat ${name}; done; }

export_ ROOT $BCH_ZJOT_ACC_DIR
[ "$ROOT" = "" ] && export_ ROOT  ~/dated.bch.acc
alias prj='cd ~/_prj'

export_ bold    $(tput bold)
export_ normal  $(tput sgr0)
export_ ulOn    $(tput smul)
export_ ulOff   $(tput rmul)

main () {
    export_ dt      $(dt4)
    export_ file    ${ROOT}/$(date4dt $dt)T.zjot
    export_ f0      "${dt}.zjot"
    export_ f1      "${*}"

    mkdir -p ${ROOT}
    touch $file
    dump

    echo 
    read -p "${f0} ${f1} ... " f2
    echo

    echo "$f0 $f1 $f2" >> $file
    dump
}
main $*






